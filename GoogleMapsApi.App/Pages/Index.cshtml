    @if (Model.CanShow)
    {
        <table style="border: 1px solid transparent" align="center" >
            <tr>
                <td>
                    <figure style="margin: 0 10px 10px 0">
                        <figcaption style="text-align:center">Отображение пути используя PolylineEncoding из Direction</figcaption>
                        <img width="500" height="500" src=@Model.ImageSrc>
                    </figure>
                </td>
                <td>
                    <figure style="margin: 0 10px 10px 0">
                        <figcaption style="text-align:center">Отображение пути используя StartPoints и Endpoints</figcaption>
                        <img width="500" height="500" src=@Model.ImagePathSrc>
                    </figure>
                </td>
            </tr>
            <tr>

            </tr>
        </table>

        <figure>
            <figcaption style="text-align:center">Отображение пути используя Maps Embed API </figcaption>
            <iframe width="500" height="500" style="border:0" loading="lazy" align="middle" src=@Model.ImageDynamicSrc></iframe>
        </figure>
    }

    @if (Model.Steps != null)
        for (int i = 0; i < Model.Steps.Count(); i++)
        {
            var step = Model.Steps[i];
            <figure style="caption-side: top; margin-top: 10px">
                <figcaption style = "font-size: 200%"><b>@i.</b> @Html.Raw(step.Description)</figcaption>
                <img src=@step.Src>
            </figure>
        }
</div>